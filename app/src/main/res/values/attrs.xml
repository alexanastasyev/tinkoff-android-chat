<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EmojiView">
        <attr name="text_color" format="color" />
        <attr name="size" format="dimension" />
        <attr name="emoji_unicode" format="integer" />
        <attr name="emoji_amount" format="integer" />
    </declare-styleable>

    <declare-styleable name="MessageViewGroup">
        <attr name="user_name" format="string"/>
        <attr name="message_text" format="string"/>
        <attr name="avatar_src" format="reference"/>
        <attr name="align" format="enum">
            <enum name="LEFT" value="0"/>
            <enum name="RIGHT" value="1"/>
        </attr>
        <attr name="message_background" format="reference"/>
        <attr name="text_size" format="dimension"/>
    </declare-styleable>
</resources>