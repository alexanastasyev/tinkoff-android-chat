<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PeopleFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextSearchPeople"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imageSearchPeople"
                android:inputType="textShortMessage"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="@string/users"
                android:textColor="@color/white"
                android:textColorHint="@android:color/darker_gray"/>

            <ImageView
                android:id="@+id/imageSearchPeople"
                app:layout_constraintTop_toTopOf="@id/editTextSearchPeople"
                app:layout_constraintBottom_toBottomOf="@id/editTextSearchPeople"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/search"
                android:contentDescription="@string/search" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/toolbarPeople"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/recyclerViewContacts"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>